@model Webtest2.user

@{

    List<order_product> orderProduct = (List<order_product>)ViewData["Order_product"];
    ViewBag.Title = "Home";
    int count = 1;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var user = (user)ViewData["user"];
    List<cart> carts = new List<cart>();
    Function fs = new Function();
    var base64 = "";
    var imgsrc = "";


    if (Session["Cart"] != null)
    {
        carts = (List<cart>)Session["cart"];
    };
    var value = 8012.34m;
    var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");

}
@using System.Collections;

<div class="w3l_banner_nav_right">
    <div class="container-full">
        <h2>Order History</h2>

        <table class="table table-hover">
            <thead>
                <tr class="w3-light-grey">
                    <th class="w3-center">Order ID</th>
                    <th class="w3-center">Date Order</th>
                    <th class="w3-center">Product</th>
                    <th class="w3-center">Total</th>
                    <th class="w3-center">Status</th>
                </tr>
            </thead>
            @foreach (var item in orderProduct)
            {
                if (item == null)
                {
                    continue;
                }
                <tr>
                    <td class="w3-center">@item.order_id</td>
                    <td class="w3-center">@item.order.date_order</td>
                    @if (item.pet_id == null)
                    {
                        <td class="w3-center">@item.item.name</td>

                    }
                    else
                    {
                        <td class="w3-center">@item.pet.name</td>



                    }
                    <td class="w3-center">
                        @String.Format(info, "{0:c}", @item.price)

                    </td>
                    @if ((bool)item.order.status)
                    {
                        <td class="w3-center">Shipping</td>
                    }
                    else
                    {
                        <td class="w3-center">Pending</td>
                    }
                </tr>
            }
        </table>
    </div>
</div>

<div class="clearfix"></div>


